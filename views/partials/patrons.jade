extends ../index

block content

  h1 Patrons
  p
    a.button (href='books/new') Create New Patron
  p Filters
    a (href='books/all') All |
    a (href='/books/all/?filter=overdue') Overdue |
    a (href='/books/all/?filter=checked_out') Checked Out
  table
    th
      tr
        th Name
        th Address
        th Email
        th Library
        th Zip
      tbody
        each patron in patrons
          tr
            td
              a(href='/patrons/' + patron.id)
                =patron.first_name
                =patron.last_name
            td= patron.address
            td= patron.email
            td= patron.library_id
            td= patron.zip_code

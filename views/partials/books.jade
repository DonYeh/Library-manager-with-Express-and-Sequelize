extends ../index

block content

  h1 Books
  p
    a.button (href='books/new') Create New Book
  p Filters
    a (href='books/all') All |
    a (href='/books/all/?filter=overdue') Overdue |
    a (href='/books/all/?filter=checked_out') Checked Out
  table
    th
      tr
        th Title
        th Author
        th Genre
        th Year Released
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id)
                =book.title
            td= book.author
            td= book.genre
            td= book.first_published
